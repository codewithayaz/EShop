@page
@model EShop.Web.Areas.Catalog.Pages.Promotion.ManageModel

@{
    ViewData["PageHeader"] = Tuple.Create(Model.Entity.Name + " Permissions", "");
}

<form method="post">
    <div class="row">
        @for (int i = 0; i < Model.Entity.Categories.Count; i++)
        {
            <input asp-for="@Model.Entity.Categories[i].Id" />

            <div class="col-sm-3">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@Model.Entity.Categories[i].Name</h3>
                    </div>
                    <div class="card-body">
                        @for (int j = 0; j < Model.Entity.Categories[i].Products.Count; j++)
                        {
                            <input asp-for="@Model.Entity.Categories[i].Products[j].Id" />

                            <div class="checkbox">
                                <label asp-for="@Model.Entity.Categories[i].Products[j].IsSelected" class="text-muted">
                                    <input asp-for="@Model.Entity.Categories[i].Products[j].IsSelected" />
                                    @Model.Entity.Categories[i].Products[j].Name
                                </label>
                            </div>
                        }

                    </div>
                    <!-- /.info-box-content -->
                </div>
            </div>

        }
    </div>
    <div class="row">
        <div class="col-sm-12">
            <input type="hidden" asp-for="Entity.Id" />
            <input type="hidden" asp-for="Entity.Name" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="info-box">

                <div class="info-box-content">
                    <div class="text-right">
                        <a asp-page="Index" class="btn btn-outline-danger">Cancel</a>
                        <input type="submit" value="Update" class="btn btn-outline-info" />
                    </div>
                </div>
                <!-- /.info-box-content -->
            </div>
        </div>
    </div>



</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
